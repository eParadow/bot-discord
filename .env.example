# Discord Bot Token (from Discord Developer Portal)
DISCORD_TOKEN=your_bot_token_here

# Discord Application Client ID (from Discord Developer Portal)
CLIENT_ID=your_client_id_here

# PostgreSQL Configuration
# Option 1: Use DATABASE_URL (for Railway, Heroku, etc.)
# DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Use individual parameters (for local Docker)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DATABASE=discord_bot
POSTGRES_USER=discord_bot
POSTGRES_PASSWORD=your_password_here

# API Server Configuration
API_PORT=3000
JWT_SECRET=your_jwt_secret_here

# CORS Configuration (optional)
# CORS_ORIGIN=http://localhost:3001

